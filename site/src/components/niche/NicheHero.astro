---
interface Props {
  niche: {
    name: string;
    icon: string;
    hero: {
      title: string;
      subtitle: string;
      ctaPrimary: string;
      ctaSecondary: string;
    };
  };
}

const { niche } = Astro.props;
---

<header>
  <div class="max-w-2xl mx-auto text-center py-16">
    <span class="text-6xl mb-4 block">{niche.icon}</span>
    <h1 class="text-base-800 font-medium md:text-4xl text-3xl">
      {niche.hero.title}
    </h1>
    <p class="mt-4 text-base-500 text-balance text-sm max-w-lg mx-auto">
      {niche.hero.subtitle}
    </p>
    <div class="flex justify-center flex-wrap gap-3 mt-6">
      <a
        class="px-6 font-medium h-10 text-sm bg-orange-500 text-white rounded-full flex items-center justify-center hover:bg-orange-600 duration-300 w-fit"
        href="#products"
      >
        {niche.hero.ctaPrimary}
      </a>
      <a
        class="px-6 font-medium h-10 text-sm bg-base-50 text-base-900 rounded-full flex items-center justify-center hover:bg-base-100 duration-300 w-fit"
        href="#all-locations"
      >
        {niche.hero.ctaSecondary}
      </a>
    </div>
  </div>
</header>
