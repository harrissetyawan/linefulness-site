---
import { generateRealViewUrl } from "../../lib/zazzle";

interface Template {
  type: string;
  product_id_pd: string;
  parameter_mapping: {
    text_variable: string;
    image_variable: string;
  };
  constraints?: {
    max_text_length?: number;
    image_aspect_ratio?: string;
  };
  realview_params?: {
    max_dim: number;
    text_color: string;
  };
}

interface Location {
  name: string;
  slug: string;
}

interface Niche {
  id: string;
  slug: string;
  collections: {
    title: string;
    subtitle: string;
    sectionTitle: string;
    sectionSubtitle: string;
  };
  templates: Template[];
  locations: Location[];
}

interface Props {
  niche: Niche;
}

const { niche } = Astro.props;

// Shuffle locations for variety
function shuffleArray<T>(array: T[]): T[] {
  const shuffled = [...array];
  for (let i = shuffled.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
  }
  return shuffled;
}

const shuffledLocations = shuffleArray(niche.locations);

// Distribute locations across templates (4 per template)
const locationsPerTemplate = 4;
const templateSections = niche.templates.map((template, index) => {
  const startIdx = index * locationsPerTemplate;
  const endIdx = startIdx + locationsPerTemplate;
  const locations = shuffledLocations.slice(startIdx, endIdx);
  
  return {
    template,
    locations: locations.map(location => ({
      ...location,
      previewUrl: generateRealViewUrl(template as any, location as any),
      url: `/${niche.slug}/${location.slug}`
    }))
  };
});
---

{/* Product Category Sections */}
{templateSections.map((section, sectionIndex) => (
  <section class={`py-8 ${sectionIndex > 0 ? 'border-t border-base-200' : ''}`}>
    <div class="flex items-center justify-between mb-6">
      <div>
        <h2 class="text-2xl font-bold text-base-900">{section.template.type}&nbsp;{niche.collections.title}</h2>
        <p class="text-sm text-base-500 mt-1">{niche.collections.subtitle.replace('{type}', section.template.type)}</p>
      </div>
      <a 
        href={`/${niche.slug}/${section.locations[0]?.slug || niche.locations[0].slug}`} 
        class="text-sm font-semibold text-orange-600 hover:text-orange-700 flex items-center gap-1 transition-colors"
      >
        View All
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
    
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {section.locations.map((location, index) => (
        <a 
          href={`${location.url}?template=${encodeURIComponent(section.template.type)}`}
          class="group block"
          data-location-card
        >
          <figure class="relative overflow-hidden rounded-2xl shadow bg-base-100 aspect-square">
            {/* Loading skeleton */}
            <div class="absolute inset-0 bg-base-200 animate-pulse skeleton" data-skeleton></div>
            
            <img
              src={location.previewUrl}
              alt={`${location.name} ${section.template.type}`}
              class="absolute inset-0 w-full h-full object-cover object-center transition-all duration-500 group-hover:scale-105"
              loading={sectionIndex === 0 && index < 4 ? "eager" : "lazy"}
              decoding={sectionIndex === 0 && index < 4 ? "sync" : "async"}
              fetchpriority={sectionIndex === 0 && index < 2 ? "high" : "auto"}
              data-preview-image
              onload="this.classList.remove('opacity-0'); this.classList.add('opacity-100'); this.parentElement.querySelector('[data-skeleton]').style.display='none';"
              onerror="this.style.display='none'; this.parentElement.querySelector('[data-skeleton]').style.display='none'; this.parentElement.querySelector('[data-fallback]').style.display='flex';"
            />
            
            {/* Fallback for failed images */}
            <div 
              class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-orange-50 to-base-100" 
              data-fallback
            >
              <div class="text-center p-4">
                <span class="text-4xl">üè∑Ô∏è</span>
                <p class="mt-2 text-sm font-medium text-base-700">{location.name}</p>
              </div>
            </div>
            
            {/* Overlay gradient */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity" />
            
            {/* Content overlay */}
            <div class="absolute bottom-0 left-0 right-0 p-5">
              <p class="text-xs font-medium text-white/80 uppercase tracking-wider">{section.template.type}</p>
              <h3 class="text-lg font-bold text-white mt-1 group-hover:text-orange-300 transition-colors">{location.name}</h3>
            </div>
            
            {/* Hover indicator */}
            <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
              <span class="bg-white/20 backdrop-blur-sm text-white text-xs font-semibold px-3 py-1.5 rounded-full">
                Customize ‚Üí
              </span>
            </div>
          </figure>
          
          <div class="mt-3 flex justify-between items-center px-1">
            <span class="text-xs text-base-500">{section.template.type}</span>
            <span class="text-xs font-semibold text-orange-600 group-hover:text-orange-700 transition-colors">
              View Products
            </span>
          </div>
        </a>
      ))}
    </div>
  </section>
))}

<!-- All Locations Section -->
<section id="all-locations" class="py-16 scroll-mt-8 border-t border-base-200">
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-base-900">{niche.collections.sectionTitle}</h2>
    <p class="text-sm text-base-500 mt-1">{niche.collections.sectionSubtitle.replace('{count}', niche.locations.length.toString())}</p>
  </div>
  
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
    {niche.locations.map((location) => (
      <a
        href={`/${niche.slug}/${location.slug}`}
        class="group px-4 py-3 bg-base-50 hover:bg-orange-50 rounded-xl transition-all duration-200 border border-transparent hover:border-orange-200 hover:shadow-sm"
      >
        <span class="text-sm font-medium text-base-700 group-hover:text-orange-700 line-clamp-1">
          {location.name}
        </span>
      </a>
    ))}
  </div>
  
  {/* Quick navigation alphabet */}
  <div class="mt-8 pt-8 border-t border-base-200">
    <p class="text-xs font-semibold text-base-500 uppercase tracking-wider mb-3">Quick Jump</p>
    <div class="flex flex-wrap gap-2">
      {Array.from(new Set(niche.locations.map(l => l.name[0].toUpperCase()))).sort().map(letter => (
        <button
          type="button"
          class="w-8 h-8 text-sm font-medium text-base-600 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition-colors"
          onclick={`document.querySelector('[data-letter="${letter}"]')?.scrollIntoView({ behavior: 'smooth', block: 'center' })`}
        >
          {letter}
        </button>
      ))}
    </div>
  </div>
</section>

<style>
  .skeleton {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: .5; }
  }
  
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Add letter markers to the all-locations grid
  document.addEventListener('DOMContentLoaded', () => {
    const locations = document.querySelectorAll('#all-locations a');
    let currentLetter = '';
    
    locations.forEach(location => {
      const firstLetter = location.textContent?.trim()[0].toUpperCase();
      if (firstLetter && firstLetter !== currentLetter) {
        currentLetter = firstLetter;
        location.setAttribute('data-letter', currentLetter);
      }
    });
  });
</script>
